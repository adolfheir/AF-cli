{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/app/*"
      ],
      "@common/*": [
        "./src/app/common/*"
      ],
      "@pages/*": [
        ".src//app/utils/*"
      ],
      "@styles/*": [
        ".src/config/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "vendors"
  ]
}
